{
    "expo": {
        "name": "umte",
        "slug": "umte",
        "version": "1.0.0",
        "icon": "./assets/images/icon.png",
        "scheme": "electromains",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/images/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#1e1f22"
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true,
            "requireFullScreen": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#1e1f22"
            },
            "package": "com.roivasxxx.umte"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-secure-store",
            [
                "expo-screen-orientation",
                {
                    "initialOrientation": "LANDSCAPE"
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/images/notification-icon.png",
                    "color": "#ffffff"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        },
        "extra": {
            "eas": {
                "projectId": "2980e601-0810-4ddc-a702-07993add4afa",
                "BE_URL": "https://be.electromains.fun"
            }
        }
    }
}
